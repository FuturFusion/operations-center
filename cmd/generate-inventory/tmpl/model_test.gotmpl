func TestIncus{{ .ObjectType | pascalcase }}Wrapper_Value(t *testing.T) {
	tests := []struct {
		name string

		{{ .ObjectType | camelcase }} inventory.Incus{{ .ObjectType | pascalcase }}Wrapper

		assertErr require.ErrorAssertionFunc
	}{
		{
			name: "success",

			{{ .ObjectType | camelcase }}: inventory.Incus{{ .ObjectType | pascalcase }}Wrapper{
				{{ .ObjectType | pascalcase }}: api.{{ .ObjectType | pascalcase }}{},
			},

			assertErr: require.NoError,
		},
	}

	for _, tc := range tests {
		t.Run(tc.name, func(t *testing.T) {
			_, err := tc.{{ .ObjectType | camelcase }}.Value()

			tc.assertErr(t, err)
		})
	}
}

func TestIncus{{ .ObjectType | pascalcase }}Wrapper_Scan(t *testing.T) {
	tests := []struct {
		name string

		value any

		assertErr require.ErrorAssertionFunc
	}{
		{
			name: "success - []byte",

			value: []byte(`{}`),

			assertErr: require.NoError,
		},
		{
			name: "success - string",

			value: `{}`,

			assertErr: require.NoError,
		},
		{
			name: "error - nil",

			assertErr: require.Error,
		},
		{
			name: "error - unsupported type",

			value: 1, // not supported for Incus{{ .ObjectType | pascalcase }}Wrapper

			assertErr: require.Error,
		},
	}

	for _, tc := range tests {
		t.Run(tc.name, func(t *testing.T) {
			updateFiles := inventory.Incus{{ .ObjectType | pascalcase }}Wrapper{}

			err := updateFiles.Scan(tc.value)

			tc.assertErr(t, err)
		})
	}
}


func Test{{ .Name | pascalcase }}_Filter(t *testing.T) {
	tests := []struct {
		name  string
		filter inventory.{{ .Name | pascalcase }}Filter

		want string
	}{
		{
			name: "empty filter",
			filter: inventory.{{ .Name | pascalcase }}Filter{},

			want: ``,
		},
		{
			name: "complete filter",
			filter: inventory.{{ .Name | pascalcase }}Filter{
				UUID:        ptr.To(uuidgen.FromPattern(t, "1")),
				Cluster:     ptr.To("cluster"),
{{- if .ServerIDByLocation }}
				Server:      ptr.To("server"),
{{- end }}
{{- if .HasProject }}
				ProjectName: ptr.To("project"),
{{- end }}
{{- if .HasParent }}
				{{ .ParentName | pascalcase }}Name: ptr.To("{{ .ParentName }}"),
{{- end }}
				Name:        ptr.To("name"),
				Expression:  ptr.To("true"),
			},

			want: `cluster=cluster&filter=true&name=name{{ if .HasParent }}&parent={{ .ParentName }}{{ end }}{{ if .HasProject }}&project=project{{ end }}{{ if .ServerIDByLocation }}&server=server{{ end }}&uuid=11111111-1111-1111-1111-111111111111`,
		},
	}

	for _, tc := range tests {
		t.Run(tc.name, func(t *testing.T) {
			require.Equal(t, tc.want, tc.filter.String())
		})
	}
}

func (m *{{ .Name | pascalcase }}) DeriveUUID() *{{ .Name | pascalcase }} {
	identifier := strings.Join([]string{
		m.Cluster,
{{- if and .ServerIDByLocation .IsServerIDDefining }}
		m.Server,
{{- end }}
{{- if .HasProjectDirect }}
		m.ProjectName,
{{- end }}
{{- if .HasParent }}

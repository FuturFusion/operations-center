{{- end }}
{{- range .ExtraAttributes }}
		fmt.Sprintf("%v", m.{{ .Name | pascalcase }}),
{{- end }}
		m.Name,
	}, ":")

	m.UUID = uuid.NewSHA1(InventorySpaceUUID, []byte(identifier))

	return m
}


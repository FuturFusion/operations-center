)

func Test_GetWithFilter{{ .PluralName | pascalcase }}(t *testing.T) {
	socketClient, unauthorizedHTTPClient, db := daemonSetup(t)

	tests := []struct {
		name       string
		client     client.OperationsCenterClient
		dbSeedFunc func(t *testing.T)

		assertErr  require.ErrorAssertionFunc
		assertFunc func(t *testing.T, result []api.{{ .Name | pascalcase }})
	}{
		{
			name:       "success - empty list",
			client:     socketClient,
			dbSeedFunc: noop,

			assertErr: require.NoError,
			assertFunc: func(t *testing.T, result []api.{{ .Name | pascalcase }}) {
				t.Helper()

				require.Empty(t, result)
			},
		},
		{
			name:   "success - one record",
			client: socketClient,

			dbSeedFunc: func(t *testing.T) {
				t.Helper()

				_, err := provisioningEntities.CreateCluster(t.Context(), db, provisioning.Cluster{
					Name:    "clusterOne",
					Channel: "stable",
				})
				require.NoError(t, err)

{{ if .ServerIDByLocation }}
				_, err = provisioningEntities.CreateServer(t.Context(), db, provisioning.Server{
					Name:    "serverOne",
					Channel: "stable",
				})
				require.NoError(t, err)
{{ end }}

				_, err = entities.Create{{ .Name | pascalcaseWithoutAcronyms }}(t.Context(), db, inventory.{{ .Name | pascalcase }}{
					UUID:    uuidgen.FromPattern(t, "1"),
					Name:    "one",
					Cluster: "clusterOne",
{{- if .ServerIDByLocation }}
	{{- if .IsServerIDOptional }}
					Server:  ptr.To("serverOne"),
	{{- else }}
					Server:    "serverOne",
	{{- end }}
{{- end }}
				})
				require.NoError(t, err)
			},

			assertErr: require.NoError,
			assertFunc: func(t *testing.T, result []api.{{ .Name | pascalcase }}) {
				t.Helper()

				require.Len(t, result, 1)
				require.Equal(t, "one", result[0].Name)
			},
		},
		{
			name:       "error - not authorized",
			client:     unauthorizedHTTPClient,
			dbSeedFunc: noop,

			assertErr: func(tt require.TestingT, err error, a ...any) {
				require.ErrorIs(tt, err, domain.ErrNotAuthenticated)
			},
			assertFunc: func(t *testing.T, result []api.{{ .Name | pascalcase }}) {
				t.Helper()
			},
		},
	}

	for _, tc := range tests {
		t.Run(tc.name, func(t *testing.T) {
			tc.dbSeedFunc(t)

			result, err := tc.client.GetWithFilter{{ .PluralName | pascalcase }}(t.Context(), inventory.{{ .Name | pascalcase }}Filter{})

			tc.assertErr(t, err)
			tc.assertFunc(t, result)
		})
	}
}

func Test_Get{{ .Name | pascalcase }}(t *testing.T) {
	socketClient, unauthorizedHTTPClient, db := daemonSetup(t)

	tests := []struct {
		name       string
		client     client.OperationsCenterClient
		dbSeedFunc func(t *testing.T)

		tcNameArg string

		assertErr  require.ErrorAssertionFunc
		assertFunc func(t *testing.T, result api.{{ .Name | pascalcase }})
	}{
		{
			name:   "success - one record",
			client: socketClient,
			dbSeedFunc: func(t *testing.T) {
				t.Helper()

				_, err := provisioningEntities.CreateCluster(t.Context(), db, provisioning.Cluster{
					Name:    "clusterOne",
					Channel: "stable",
				})
				require.NoError(t, err)

{{ if .ServerIDByLocation }}
				_, err = provisioningEntities.CreateServer(t.Context(), db, provisioning.Server{
					Name:    "serverOne",
					Channel: "stable",
				})
				require.NoError(t, err)
{{ end }}

				_, err = entities.Create{{ .Name | pascalcaseWithoutAcronyms }}(t.Context(), db, inventory.{{ .Name | pascalcase }}{
					UUID:    uuidgen.FromPattern(t, "1"),
					Name:    "foo",
					Cluster: "clusterOne",
{{- if .ServerIDByLocation }}
	{{- if .IsServerIDOptional }}
					Server:  ptr.To("serverOne"),
	{{- else }}
					Server:  "serverOne",
	{{- end }}
{{- end }}
				})
				require.NoError(t, err)
			},

			tcNameArg: uuidgen.FromPattern(t, "1").String(),

			assertErr: require.NoError,
			assertFunc: func(t *testing.T, result api.{{ .Name | pascalcase }}) {
				t.Helper()

				require.Equal(t, "foo", result.Name)
			},
		},
		{
			name:       "error - not authorized",
			client:     unauthorizedHTTPClient,
			dbSeedFunc: noop,

			tcNameArg: "foo",

			assertErr: func(tt require.TestingT, err error, a ...any) {
				require.ErrorIs(tt, err, domain.ErrNotAuthenticated)
			},
			assertFunc: func(t *testing.T, result api.{{ .Name | pascalcase }}) {
				t.Helper()
			},
		},
		{
			name:       "error - not found",
			client:     socketClient,
			dbSeedFunc: noop,

			tcNameArg: uuidgen.FromPattern(t, "2").String(),

			assertErr: func(t require.TestingT, err error, a ...any) {
				require.ErrorIs(t, err, domain.ErrNotFound)
			},
			assertFunc: func(t *testing.T, result api.{{ .Name | pascalcase }}) {
				t.Helper()
			},
		},
	}

	for _, tc := range tests {
		t.Run(tc.name, func(t *testing.T) {
			tc.dbSeedFunc(t)

			result, err := tc.client.Get{{ .Name | pascalcase }}(t.Context(), tc.tcNameArg)

			tc.assertErr(t, err)
			tc.assertFunc(t, result)
		})
	}
}
